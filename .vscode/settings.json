// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/*.uf2": true,
        "builddefs": true,
        "data": true,
        "docs": true,
        "drivers": true,
        "layouts": true,
        "lib": true,
        "platforms": true,
        "quantum": true,
        "tests": true,
        "tmk_core": true,
        "users": true,
        "util": true,
        "keyboards/[!c]*": true,
        "keyboards/c[!r]*": true,
        "keyboards/cr[!k]*": true,
        "keyboards/crk[!b]*": true,
        "keyboards/crkb[!d]*": true
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "python.formatting.provider": "yapf",
    "[json]": {
        "editor.formatOnSave": false
    },
    "clangd.arguments": ["--header-insertion=never"],
    "editor.formatOnSave": false,
    "editor.wordWrap": "off"
}
